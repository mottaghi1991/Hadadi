@model Domain.Exam.JobQuestion
@{
    ViewData["Title"] = "ویرایش سوال";
}


<div class="col-md-12">
    <div class="card card-info">
        <div class="card-header">
            <h3 class="card-title">ویرایش سوال</h3>
        </div>
        <div class="card-body">
            <div class="row">
                <div class=" col-lg-12 col-md-4">
                    <form asp-action="Edit" enctype="multipart/form-data" id="myform">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Id" />
                        <div class="form-group">
                            <label asp-for="Title" class="control-label"></label>
                            <textarea asp-for="Title" class="form-control" rows="7" style="font-size: 18px;"></textarea>
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>



                        <div class="form-group">
                            <input type="submit" value="ثبت" class="btn btn-info" />
                            <a asp-action="Index" class="btn btn-primary">بازگشت به لیست</a>

                        </div>
                    </form>
                </div>
            </div>
        </div>

    </div>
</div>




