@model Core.Dto.ViewModel.Exam.NinQuestionViewModel
@{
    ViewData["Title"] = "Index";
}



<div class="col-md-12">
    <div class="card card-primary">
        <div class="card-header">
            <h3 class="card-title">@Model.SeriTitle لیست سوالات</h3>
        </div>
        <div class="card-body">
            <p>
                <a class="btn btn-success" asp-action="create" asp-route-SeriId="@Model.SeriId">جدید</a>
            </p>
            <table class="table table-sm table-responsive table-hover table-striped text-center" style="width: auto">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.ninQuestions.FirstOrDefault().Title)
                        </th>
                     
                        <th>
                            @Html.DisplayNameFor(model => model.ninQuestions.FirstOrDefault().Order)
                        </th>
                   
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.ninQuestions)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Title)
                            </td>
                         
                            <td>
                                @Html.DisplayFor(modelItem => item.Order)
                            </td>
                            
                            <td>
                                <a asp-action="Edit" asp-route-Id="@item.Id" class="btn btn-info" style="font-size: 10px">ویرایش</a>
                               
                                <a asp-action="Delete" asp-route-id="@item.Id" onclick="return confirm('ایا از حذف اطمینان دارید؟')" class="btn btn-danger" style="font-size: 10px"> حذف</a>

                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
