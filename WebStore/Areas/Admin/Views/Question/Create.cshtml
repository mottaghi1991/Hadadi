@model Domain.Exam.Question
@{
    ViewData["Title"] = "سوال جدید";
}

<div class="col-md-12">
    <div class="card card-success">
        <div class="card-header">
            <h3 class="card-title">سوال جدید</h3>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-lg-12 col-md-4">
                    <form asp-action="Create" >
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Title" class="control-label"></label>
<textarea asp-for="Title" class="form-control" rows="7" style="font-size: 18px;"></textarea>
                            <span asp-validation-for="Title" class="text-danger"></span>

                        </div>
                        <div class="form-group">
                            <label asp-for="Order" class="control-label"></label>
                            <input asp-for="Order" class="form-control" />
                            <span asp-validation-for="Order" class="text-danger"></span>

                        </div>
                        

                       
                        <div class="form-group">
                            <input type="submit" value="ثبت" class="btn btn-success" />

                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

