@model Domain.Exam.JobOption
@{
    ViewData["Title"] = "Create";
}

<div class="col-md-12">
    <div class="card card-success">
        <div class="card-header">
            <h3 class="card-title">گزینه جدید</h3>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-lg-12 col-md-4">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="JobQuestionId" />
                        <div class="form-group">
                            <label asp-for="TItle" class="control-label"></label>
                            <input asp-for="TItle" class="form-control" />
                            <span asp-validation-for="TItle" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Value" class="control-label"></label>
                            <input asp-for="Value" class="form-control" />
                            <span asp-validation-for="Value" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="jobGroupIndexId" class="control-label"></label>
                            <select asp-for="jobGroupIndexId" asp-items=ViewBag.JobGroup class="form-control" >
                                <option>لطفا یک گزینه را انتخاب فرمایید .</option>
                            </select>
                            <span asp-validation-for="jobGroupIndexId" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <input type="submit" value="ثبت" class="btn btn-success" />
                            <a asp-action="Index" asp-route-JobQuestionId="@Model.JobQuestionId" class="btn btn-primary">بازگشت به لیست</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>



