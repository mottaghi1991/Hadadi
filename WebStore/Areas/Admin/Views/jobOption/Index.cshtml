@model Core.Dto.ViewModel.Exam.JpbOptionViewModel
@{
    ViewData["Title"] = "گزینه های MBTI";
}

<div class="col-md-12">
    <div class="card card-primary">
        <div class="card-header">
            <h3 class="card-title">@Model.QuestionTitle</h3>
        </div>
        <div class="card-body">
            <p>
                <a class="btn btn-success" asp-action="create" asp-route-QuestionId="@Model.QuestionId">جدید</a>
            </p>
            <table class="table table-sm table-responsive table-hover table-striped text-center" style="width: auto">
                <thead>
                    <tr>
                        <th></th>
                        <th>
                            @Html.DisplayNameFor(model => model.jobOptions.FirstOrDefault().TItle)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.jobOptions.FirstOrDefault().Value)
                        </th>

               
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.jobOptions)
                    {
                        <tr>

                            <td>
                                <a asp-action="Edit" asp-route-Id="@item.Id" class="btn btn-info" style="font-size: 10px">ویرایش</a>
                                <a asp-action="Delete" asp-route-id="@item.Id" onclick="return confirm('ایا از حذف اطمینان دارید؟')" class="btn btn-danger" style="font-size: 10px"> حذف</a>

                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TItle)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Value)
                            </td>

                        </tr>
                    }
                </tbody>
            
            </table>
            <a class="btn btn-primary" style="font-size: 10px" asp-controller="jobQuestion">بازگشت به لیست</a>
        </div>
    </div>
</div>

