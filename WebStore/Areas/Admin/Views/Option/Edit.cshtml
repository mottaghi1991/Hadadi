@model Domain.Exam.Option
@{
    ViewData["Title"] = "ویرایش گزینه";
}

<div class="col-md-12">
    <div class="card card-info">
        <div class="card-header">
            <h3 class="card-title">ویرایش گزینه</h3>
        </div>
        <div class="card-body">
            <div class="row">
                <div class=" col-lg-12 col-md-4">
                    <form asp-action="Edit" enctype="multipart/form-data" id="myform">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="QuestionId" />
                        <div class="form-group">
                            <label asp-for="Title" class="control-label"></label>
                            <select asp-for="Title" class="form-control">
                                <option value="الف">الف</option>
                                <option value="و">و</option>
                                <option value="ه">ه</option>
                                <option value="ج">ج</option>
                                <option value="و">و</option>
                                <option value="م">م</option>
                                <option value="ق">ق</option>
                            </select>                             <span asp-validation-for="Title" class="text-danger"></span>
                        </div>


                        <div class="form-group">
                            <label asp-for="Order" class="control-label"></label>
                            <input asp-for="Order" class="form-control" />
                            <span asp-validation-for="Order" class="text-danger"></span>

                        </div>
                        <div class="form-group">
                            <input type="submit" value="ثبت" class="btn btn-info" />


                        </div>
                    </form>
                </div>
            </div>
        </div>

    </div>
</div>


