@model Core.Dto.ViewModel.Exam.SubOptionViewModel
@{
    ViewData["Title"] = "Index";
}


<div class="col-md-12">
    <div class="card card-primary">
        <div class="card-header">
            <h5 class="card-title"> گزینه ها برای سوال(@Model.QuestionTitle)----- گزینه (@Model.OptionTitle)</h5>
        </div>
        <div class="card-body">
            <p>
                <a class="btn btn-success" asp-action="create" asp-route-questionId="@Model.QuestionId" asp-route-optionId="@Model.OptionId">جدید</a>
            </p>
         
            <table class="table table-sm table-responsive table-hover table-striped text-center" style="width: auto">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.subOptions.FirstOrDefault().Title)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.subOptions.FirstOrDefault().Order)
                        </th>

                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.subOptions)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Title)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Order)
                            </td>

                            <td>
                                <a asp-action="Edit" asp-route-SubOptionId="@item.Id" class="btn btn-info" style="font-size: 10px">ویرایش</a>
                                <a asp-action="Delete" asp-route-id="@item.Id" onclick="return confirm('ایا از حذف اطمینان دارید؟')" class="btn btn-danger" style="font-size: 10px"> حذف</a>

                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <a asp-action="Index" asp-controller="Option" asp-route-QuestionId="@Model.QuestionId" class="btn btn-primary">بازگشت به لیست</a>
        </div>
    </div>
</div>
