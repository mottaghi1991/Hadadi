@model Domain.Exam.SubOption
@{
    ViewData["Title"] = "زیرگزینه جدید";
}


<div class="col-md-12">
    <div class="card card-success">
        <div class="card-header">
            <h3 class="card-title">زیرگزینه جدید</h3>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-lg-12 col-md-4">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Title" class="control-label"></label>
                            <input asp-for="Title" class="form-control" />
                            <span asp-validation-for="Title" class="text-danger"></span>

                        </div>
                        <div class="form-group">
                            <label asp-for="Order" class="control-label"></label>
                            <input asp-for="Order" class="form-control" />
                            <span asp-validation-for="Order" class="text-danger"></span>

                        </div>
                        <div class="form-group">
                            <label asp-for="QuestionId" style="word-wrap: break-word; white-space: normal; overflow-wrap: break-word;">سوال</label>
                            <select asp-for="QuestionId" asp-items="@ViewBag.Questions" class="form-control" style="max-width: 100%; overflow: hidden; text-overflow: ellipsis; white-space: nowrap;">
                                <option>لطفا یک گزینه را انتخاب فرمائید.</option>
                            </select>
                            <span asp-validation-for="QuestionId" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="OptionId">سوال</label>
                            <select asp-for="OptionId" asp-items="@ViewBag.Questions" class="form-control">
                                <option >لطفا یک گزینه را  انتخاب فرمائید.</option>
                            </select>
                            <span asp-validation-for="OptionId" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="ثبت" class="btn btn-success" />

                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

